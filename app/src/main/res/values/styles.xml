<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AdiChallenge">
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AdiChallenge.Toolbar" parent="AdiChallenge">
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AdiChallenge.Text" parent="AdiChallenge">
        <item name="android:background">@color/text_background</item>
    </style>

    <style name="AdiChallenge.Text.Product" parent="AdiChallenge.Text"/>
    <style name="AdiChallenge.Text.Product.List" parent="AdiChallenge.Text.Product"/>

    <style name="AdiChallenge.Text.Product.List.Name" parent="AdiChallenge.Text.Product.List">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>
    <style name="AdiChallenge.Text.Product.List.Price" parent="AdiChallenge.Text.Product.List.Name">
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

</resources>